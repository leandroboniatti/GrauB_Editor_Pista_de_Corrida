{
    "version": "2.0.0",
    "tasks": [
        {
            // Task para compilar o Editor de Pista (2D)
            "label": "Build Editor de Pista",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                //"-Wall",
                //"-Wextra",
                //"-O2",
                "-g",
                // Aqui você inclui os diretórios que contém os cabeçalhos
                "-Iinclude",
                "-IDependencies/GLAD/include",
                "-IDependencies/GLFW/include",
                "-IDependencies/glm",
                // Aqui você inclui o caminho para os arquivos fonte (.c ou .cpp) (sources)
                "main.cpp",
                "src/Shader.cpp",
                "src/TrackEditor.cpp",
                "Dependencies/GLAD/src/glad.c",
                // Aqui você inclui o diretório que possui as bibliotecas estáticas
                "-LDependencies/GLFW/lib-mingw-w64",
                // Aqui você inclui o nome das biblioteca estáticas (.lib ou .a), com -l na frente
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-lkernel32",
                "-o",
                "track_editor.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}